{
    "name": "aa/api-tester",
    "type": "library",
    "description": "Library for automated REST API testing using fixtures",
    "homepage": "https://github.com/AAstakhov/api-tester",
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5 || ^7.0",
        "guzzlehttp/psr7": "~1.1",
        "guzzlehttp/guzzle": "^6.0",
        "symfony/yaml": "~2.3|~3.0",
        "symfony/finder": "~2.3|~3.0",
        "aa/array-validator": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*"
    },
    "autoload": {
        "psr-4": {
            "Aa\\ApiTester\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aa\\ApiTester\\Tests\\": "tests/"
        }
    }
}
